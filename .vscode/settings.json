                "args": [
                    "-NoProfile"
                    // "-TestName",
                    // "Test-Get-All-Users",
                ],
                "cwd": "${workspaceFolder}",
                "presentation": {
                    "hidden": false,
                    "group": "a",
                    "order": 1
                }
            }
        ],
        "compounds": []
    }
